@model Local

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Criar Local</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<div class="p-3">
				@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
				<div class="form-floating py-1 col-12">
					<input asp-for="Nome" class="form-control border-bottom shadow" />
					<label asp-for="Nome" class="ms-2"></label>
					<span asp-validation-for="Nome" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Categoria" class="form-control border shadow" />
					<label asp-for="Categoria" class="ms-2"></label>
					<span asp-validation-for="Categoria" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Localidade" class="form-control border shadow" />
					<label asp-for="Localidade" class="ms-2"></label>
					<span asp-validation-for="Localidade" class="text-danger"></span>

				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Freguesia" class="form-control border shadow" />
					<label asp-for="Freguesia" class="ms-2"></label>
					<span asp-validation-for="Freguesia" class="text-danger"></span>

				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Descricao" class="form-control border shadow" />
					<label asp-for="Descricao" class="ms-2"></label>
					<span asp-validation-for="Descricao" class="text-danger"></span>

				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="ImageUrl" class="form-control border shadow" />
					<label asp-for="ImageUrl" class="ms-2"></label>
					<span asp-validation-for="ImageUrl" class="text-danger"></span>

				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-success w-100">
							<i class="bi bi-check-circle"></i> Criar
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-action="Index" class="btn btn-secondary w-100">
							<i class="bi bi-x-circle"></i> Cancelar
						</a>
					</div>
				</div>
			</div>

		</form>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}