@model ComentNumVM

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Criar comentário</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<div class="p-3">
				<div class="form-floating py-1 col-12">
					<select asp-for="@Model.ComentNum.LocalId" asp-items="@Model.LocalList" class="form-select border shadow">
						<option disabled selected>-- Selecionar Local --</option>
					</select>
					<label asp-for="ComentNum.LocalId" class="ms-2"></label>
					<span asp-validation-for="ComentNum.LocalId" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="ComentNum.Coment_Num" class="form-control border shadow" />
					<label asp-for="ComentNum.Coment_Num" class="ms-2"></label>
					<span asp-validation-for="ComentNum.Coment_Num" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="ComentNum.Comentario" class="form-control border shadow" />
					<label asp-for="ComentNum.Comentario" class="ms-2"></label>
					<span asp-validation-for="ComentNum.Comentario" class="text-danger"></span>

				</div>
				
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-success w-100">
							<i class="bi bi-check-circle"></i> Criar
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-action="Index" class="btn btn-secondary w-100">
							<i class="bi bi-x-circle"></i> Cancelar
						</a>
					</div>
				</div>
			</div>

		</form>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}